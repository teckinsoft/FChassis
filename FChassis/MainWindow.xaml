<Window x:Class="FChassis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FChassis"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="450" Width="800" 
        Loaded="OnWindowLoaded">
    <Window.Resources>
        <local:SimulationStatusToVisibilityConverter x:Key="SimulationStatusToVisibilityConverter" />
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <!-- Menu at the top of the window -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Files">
                <MenuItem Header="Open File" Click="OnMenuFileOpen"/>
                <MenuItem Header="Open Folder" Click="OnMenuDirOpen"/>
                <!--<MenuItem Header="Import" Click="OnMenuImportFile"/>-->
                <MenuItem Header="Mirror and Join" Click="OnMirrorAndJoin"/>
                <MenuItem Header="Save" Click= "OnMenuFileSave"/>
                <MenuItem Header="Close" Click="OnFileClose"/>
            </MenuItem>
            <MenuItem Header="Options">
                <MenuItem Header="Settings" Click="OnSettings"/>
                <MenuItem x:Name="SanityCheckMenuItem" Header="Sanity Check" Click="OnSanityCheck" Visibility="Collapsed"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About.." Click="OnAbout"/>                
            </MenuItem>
        </Menu>
        <DockPanel DockPanel.Dock="Left">
            <!-- Simulate Button -->
            <Button DockPanel.Dock="Bottom" Margin="4" Content="Simulate" Click="Simulate"
                        Visibility="{Binding SimulationStatus, Converter={StaticResource SimulationStatusToVisibilityConverter}, ConverterParameter='Simulate'}" />
            <!-- Pause Button -->
            <Button DockPanel.Dock="Bottom" Content="Pause" Click="PauseSimulation" Margin="4,4,4,0"
                        Visibility="{Binding SimulationStatus, Converter={StaticResource SimulationStatusToVisibilityConverter}, ConverterParameter='Pause'}" />
            <!-- Stop Button -->
            <Button DockPanel.Dock="Bottom" Content="Stop" Click="StopSimulation" Margin="4,4,4,0"
                        Visibility="{Binding SimulationStatus, Converter={StaticResource SimulationStatusToVisibilityConverter}, ConverterParameter='Stop'}" />

            <Button DockPanel.Dock="Bottom" Click="DoGenerateGCode" Margin="4,4,4,0">Generate G Code</Button>
            <Button DockPanel.Dock="Bottom" Click="DoSorting" Margin="4,4,4,0">Sequence</Button>
            <Button DockPanel.Dock="Bottom" Click="DoCutNotches" Margin="4,4,4,0">Cut Notches</Button>
            <Button DockPanel.Dock="Bottom" Click="DoTextMarking" Margin="4,4,4,0">Text Marking</Button>
            <Button DockPanel.Dock="Bottom" Click="DoAddHoles" Margin="4,4,4,0">Cut Holes</Button>
            <Button DockPanel.Dock="Bottom" Click="DoAlign" Margin="4,4,4,0">Align</Button>
            <ListBox Name="Files" MinWidth="150" SelectionChanged="OnFileSelected" />
        </DockPanel>
        <Border Name="Area" />
    </DockPanel>
</Window>
