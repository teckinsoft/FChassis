<Window x:Class="FChassis.JoinResult"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:FChassis.VM"
        Title="Join Result" Height="100" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="ToolWindow">

    <Window.DataContext>
        <vm:JoinResultVM />
    </Window.DataContext>

    <Grid>
        <TextBlock Name="MessageText" Text="Select what you want to do with the result" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Save and Open" Width ="100" Margin ="5"  Command="{Binding SaveAndOpenCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Content="Save" Width ="100" Margin ="5" Command="{Binding SaveCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Content="Cancel" Width ="100" Margin ="5" Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>


