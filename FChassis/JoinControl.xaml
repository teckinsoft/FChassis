<UserControl x:Class="FChassis.JoinControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FChassis"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0, 4, 0, 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
            <RowDefinition Height="32" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button Margin="4" Content="Load .." Command="{Binding LeftLoadCommand}"/>
        <TextBox Grid.Column="1" Margin="4" Text="{Binding LeftFilename}"/>
        <Image Grid.Row="1" Grid.Column="1" Source="{Binding LeftFilename}"/>
        <Button Grid.Row="2" Grid.ColumnSpan="2" Margin="4" Content="Flip"
                Command="{Binding LeftFlipCommand}"/>

        <Button Grid.Column="2" Margin="4" Content="Load .."
                Command="{Binding RightLoadCommand}"/>
        <TextBox Grid.Column="3" Margin="4" Text="{Binding RightFilename}"/>
        <Image Grid.Row="1" Grid.Column="3" Source="{Binding RightFilename}"/>
        <Button Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Margin="4"
                Content="Flip" Command="{Binding RightFlipCommand}"/>

        <Button Grid.Row="3" Grid.ColumnSpan="4" Margin="4"
                Content="Join"
                Command="{Binding JoinCommand}"/>
    </Grid>
</UserControl>
