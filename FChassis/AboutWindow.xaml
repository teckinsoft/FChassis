<Window x:Class="FChassis.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About FChassis" Height="200" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="FChassis" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Version" FontSize="16" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding Version}" FontSize="14" Margin="5" HorizontalAlignment="Center"/>
            <Button Content="OK" Width="80" Margin="10" Click="OnAboutCloseClick" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>